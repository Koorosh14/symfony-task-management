<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Welcome!{% endblock %}</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}{{ importmap('app') }}{% endblock %}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="bg-white shadow-md rounded-b-lg p-6">
				<h1 class="navbar-brand text-2xl font-bold mb-6">Task Management</h1>
				<div id="nav" class="flex items-center justify-between">
					<ul class="navbar-nav flex flex-row gap-x-10">
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('tasks_index') }}">Tasks</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('task_new') }}">New Task</a>
							</li>
						{% endif %}
					</ul>
					<ul class="navbar-nav flex flex-row gap-x-10">
						{% if app.user %}
							<li class="nav-item">
								<span class="nav-link">Hello {{ app.user.email }}</span>
							</li>
							<li class="nav-item"> | </li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Login</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_register') }}">Register</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}
	</body>
</html>
