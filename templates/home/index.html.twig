{% extends 'base.html.twig' %}

{% block title %}Task Manager - Your Personal Task Organization Tool{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block body %}
<div class="bg-gradient-to-b from-blue-50 to-white">
	<!-- Hero Section -->
	<div class="container mx-auto px-4 py-16 md:py-24">
		<div class="flex flex-col md:flex-row items-center">
			<div class="md:w-1/2 mb-8 md:mb-0">
				<h1 class="text-4xl md:text-5xl font-bold text-blue-800 mb-4">Manage Your Tasks Efficiently</h1>
				<p class="text-lg text-gray-700 mb-8">A simple yet powerful task management application to help you stay organized and productive.</p>
				<div class="flex flex-col sm:flex-row gap-4">
					<a href="{{ path('tasks_index') }}" class="bg-blue-600 text-white font-medium py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-300 text-center">Go to Tasks</a>
					<a href="{{ path('app_register') }}" class="bg-white text-blue-600 border border-blue-600 font-medium py-2 px-6 rounded-lg hover:bg-blue-50 transition duration-300 text-center">Create Account</a>
				</div>
			</div>
			<div class="md:w-1/2 flex justify-center">
				<img src="{{ asset('images/tasks-index.jpg') }}" alt="Task Management Illustration" class="w-full">
			</div>
		</div>
	</div>

	<!-- Features Section -->
	<div class="bg-white py-16">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center text-gray-800 mb-12">Key Features</h2>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{% for feature in features %}
					<div class="bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition duration-300">
						<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mb-4">
							<i class="fas fa-{{ feature.icon }} text-blue-600 text-xl"></i>
						</div>
						<h3 class="text-xl font-semibold text-gray-800 mb-2">{{ feature.title }}</h3>
						<p class="text-gray-600">{{ feature.description }}</p>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

	<!-- Screenshot Section -->
	<div class="bg-gray-50 py-16">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center text-gray-800 mb-12">See It In Action</h2>
			
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<div class="bg-white p-4 rounded-lg shadow-md">
					<a href="{{ asset('images/task-show.jpg') }}" target="_blank">
						<img src="{{ asset('images/task-show.jpg') }}" alt="Task Detail Screenshot" class="rounded-lg w-full">
					</a>
					<p class="mt-4 text-center text-gray-700 font-medium">Task details with editing options</p>
				</div>
				<div class="bg-white p-4 rounded-lg shadow-md">
					<a href="{{ asset('images/user-dashboard.jpg') }}" target="_blank">
						<img src="{{ asset('images/user-dashboard.jpg') }}" alt="User Dashboard Screenshot" class="rounded-lg w-full">
					</a>
					<p class="mt-4 text-center text-gray-700 font-medium">Useful dashboard with task analytics</p>
				</div>
			</div>
		</div>
	</div>

	<!-- Call to Action -->
	<div class="bg-blue-600 text-white py-16">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
			<a href="{{ path('app_register') }}" class="bg-white text-blue-600 font-bold py-3 px-8 rounded-lg hover:bg-blue-50 transition duration-300">Sign Up Now</a>
		</div>
	</div>
</div>
{% endblock %}