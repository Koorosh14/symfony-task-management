{% extends 'base.html.twig' %}

{% block title %}Delete {{ task.title }}{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-6">Delete {{ task.title }}</h1>

		<div class="bg-white shadow-md rounded-lg p-6">
			<p>Are you sure?</p>

			<form method="post">
				<button class="bg-red-500 hover:bg-red-600 text-white m-3 px-4 py-2 rounded">Yes</button>

				<a href="{{ path('task_show', {'id': task.id}) }}" class="bg-blue-500 hover:bg-blue-600 text-white m-3 px-4 py-2 rounded">No</a>
			</form>
		</div>
	</div>
{% endblock %}
