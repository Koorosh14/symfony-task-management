{% extends 'base.html.twig' %}

{% block title %}Create New Task
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-6">Create New Task</h1>

		<div class="bg-white shadow-md rounded-lg p-6">
			{{ form_start(form) }}
				<div class="mb-4">
					{{ form_row(form.title, {'attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
				</div>
				<div class="mb-4">
					{{ form_row(form.description, {'attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
				</div>
				<div class="mb-4">
					{{ form_row(form.status, {'attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
				</div>
				<div class="mb-4">
					{{ form_row(form.isImportant, {'attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
				</div>
				<div class="mb-4">
					{{ form_row(form.dueDate, {'attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
				</div>
				<div class="mb-4">
					{{ form_row(form.assignedTo, {'attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
				</div>

				<div class="flex items-center justify-between">
					<a href="{{ path('tasks_index') }}" class="inline-block align-baseline font-bold text-blue-500 hover:text-blue-800">
						Cancel
					</a>
				</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
