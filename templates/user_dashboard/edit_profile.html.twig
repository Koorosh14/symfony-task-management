{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-6">Edit Profile</h1>

		<div class="bg-white rounded-lg shadow-md p-6">
			{{ form_start(form, {'attr': {'class': 'max-w-lg'}}) }}
			<div class="mb-4">
				{{ form_label(form.name, 'Name', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
				{{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
				{{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
				{{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
			</div>

			<div class="flex justify-between items-center">
				<button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
					Save Changes
				</button>
				<a href="{{ path('user_dashboard') }}" class="text-blue-500 hover:text-blue-700">
					Back to Dashboard
				</a>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
